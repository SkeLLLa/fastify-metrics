{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "newLine": "LF",
    "noErrorTruncation": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": ["es2018"],
    "outDir": "dist",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es2018"
  },
  "exclude": [
    "dist/**/*",
    "coverage/**/*",
    "node_modules/**/*",
    "jest.config.js",
    "example/**/*",
    ".*"
  ],
  "include": ["src/**/*"],
  "typedocOptions": {
    "entryPoints": ["src/index.ts", "src/plugin.ts"],
    "out": "docs",
    "name": "Fastify metrics",
    "excludeExternals": true,
    "includeVersion": true,
    "hideGenerator": true,
    "excludePrivate": true,
    "readme": "none"
  }
}
